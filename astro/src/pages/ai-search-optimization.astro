              <div class="border border-border rounded-lg p-6 bg-card">
                <div class="flex items-start space-x-4 mb-4">
                  <div class="p-3 rounded-lg bg-primary/10">
                    {platform.platform === 'Google SGE (Search Generative Experience)' && (
                      <svg class="h-6 w-6 text-primary" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
                    )}
