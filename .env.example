# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001
CLIENT_URL=http://localhost:3000

# Database (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# AI Processing
# Choose provider: 'anthropic' (recommended for precision) or 'openai' (faster)
AI_MODEL_PROVIDER=anthropic

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Anthropic Claude Configuration (Recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SCHEMA_RATE_LIMIT_WINDOW_MS=60000
SCHEMA_RATE_LIMIT_MAX_REQUESTS=5

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_DISABLE_SANDBOX=false

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# HubSpot Integration (OAuth for users)
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
# Generate encryption key with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
HUBSPOT_ENCRYPTION_KEY=your_hubspot_encryption_key

# HubSpot CRM (for adding SuperSchema users to company CRM)
# Create a Private App in HubSpot Settings > Integrations > Private Apps
# Required Scopes: crm.objects.contacts.write, crm.lists.write, crm.schemas.contacts.read
HUBSPOT_CRM_API_KEY=your_private_app_api_key
# Optional: List ID to automatically add new signups to a specific list
HUBSPOT_CRM_LIST_ID=your_list_id

# Feature Flags
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
HUBSPOT_FEATURE_ENABLED=true